  "dependencies": {
    "@ai-sdk/openai": "^3.0.1",
    "@ai-sdk/xai": "^3.0.1",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "ai": "^6.0.3",
    "openai": "^6.15.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bun": "^1.2.15",
