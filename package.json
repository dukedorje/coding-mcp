{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@identikey/coding-mcp",
  "version": "2.0.5",
  "description": "MCP Server with expert AI personas for code architecture, reviews, screenshots, and research",
  "type": "module",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "files": [
    "build",
    "README.md",
